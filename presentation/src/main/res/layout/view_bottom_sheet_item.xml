<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lbl_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/number_of_ingredients"
        android:layout_marginStart="@dimen/medium_horizontal_margin"
        android:theme="@style/TextAppearance.App.Body"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        android:theme="@style/TextAppearance.App.Body"
        app:layout_constraintStart_toEndOf="@+id/lbl_text_view"
        app:layout_constraintTop_toTopOf="@+id/lbl_text_view" />


</androidx.constraintlayout.widget.ConstraintLayout>